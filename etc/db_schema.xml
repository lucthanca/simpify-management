<?xml version="1.0"?>
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="simicart_simpify_users" resource="default" engine="innodb" comment="Simicart Shopify Users">
        <column xsi:type="int" name="entity_id" unsigned="true" nullable="false" identity="true"
                comment="Entity ID"/>
        <column xsi:type="varchar" name="shop_domain" nullable="false" length="128" comment="Shop Domain"/>
        <column xsi:type="varchar" name="shop_name" nullable="true" length="64" comment="Shop name"/>
        <column xsi:type="varchar" name="shop_email" nullable="true" length="64" comment="Shop name"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="entity_id"/>
        </constraint>
        <index referenceId="SIMICART_SIMPIFY_USERS_ENTITY_ID" indexType="btree">
            <column name="entity_id"/>
        </index>
    </table>
</schema>
